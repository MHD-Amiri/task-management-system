NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/taskdb

# Scheduler Service endpoint (used by HTTP strategy)
SCHEDULER_SERVICE_URL=http://localhost:3002

# Communication (http | socketio | redis)
COMMUNICATION_MODE=http

# Redis (required for redis strategy)
REDIS_HOST=localhost
REDIS_PORT=6379

# API versioning (url | header)
API_VERSIONING_STRATEGY=url

# Auth / security
JWT_SECRET=your-secret-key